<h1><%= @list.name %></h1>
<%= link_to "Add Movie", new_list_bookmark_path(@list,@bookmark) %>
<%@list.bookmarks.each do |bookmark|%>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%bookmark.movie.poster_url%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %> <span><%=bookmark.movie.rating  %> <i class="fa fa-star"></i></span></h5>
      <p class="card-text"><%= bookmark.movie.overview %> </p>
      <p><%= bookmark.comment %></p>
    </div>
  </div>
  <%= link_to "Remove", list_bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ms-3 text-danger alert'
            %>
<%end%>
