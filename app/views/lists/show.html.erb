<div class = "list-show">
  <div class="card-category" style="background:linear-gradient(to bottom,
        rgba(0, 0, 0, 0.4),
        rgba(0, 0, 0, 0.4)), no-repeat url('<%= cl_image_path @list.photo.key%>') center center/cover;">
    <h1><%= @list.name %></h1>
    <span class="movie-tag"><%= pluralize @list.movies.size, 'movie' %></span>
  </div>
  <div class="container mb-5">
    <div class="d-flex justify-content-between my-4">
      <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
      <div>
        <%= link_to "Ajouter un film",   new_list_bookmark_path(@list) %>
        <%= link_to "Supprimer la liste", list_path(@list), method: :delete, class: "btn btn-cancel", data: { confirm: "Vous ête sûre? vous allez supprimer la liste et tous les films" } %>
      </div>
    </div>
    <div class="row my-2">
      <% @list.movies.each do |movie| %>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
          <div class="bg-white rounded shadow h-100">
            <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
            <div class="p-3 rounded-bottom d-flex flex-column">
              <strong><%= movie.title %> <span class="text-muted font-weight-normal">• <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
              <small class="text-muted"><%= movie.overview %></small>
              <div class="d-flex align-items-end justify-content-between pt-4">
                <div>
                  <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
                </div>
                <small class="text-right flex-shrink-0"><%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
